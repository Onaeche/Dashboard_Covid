@model Dashboard_Covid.Models.ViewModel
@using ReportViewerForMvc;

@{
    ViewBag.Title = "Report";
}
@if (TempData["testmsg"] != null)
{
    @Html.Raw(TempData["testmsg"])}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">

            @using (Html.BeginForm("Report", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="box box-primary" id="show1">
                    <div class="box-header with-border">
                        <h3 class="box-title"><strong>COVID-19 CORONAVIRUS PANDEMIC REPORT</strong></h3>


                    </div>

                    <p>From Date: @Html.TextBoxFor(model => model.fromdate, new { @id = "txtdtFrom", @class = "", @type = "date" }) To Date: @Html.TextBoxFor(model => model.toDate, new { @id = "txtdtto", @class = "", @type = "date" })</p>


                    <div class="box-footer" style="margin-left:480px">
                        <button type="submit" class="btn btn-default" id="hide">Generate Covid Report</button>
                    </div>
                </div> if (ViewBag.TB != null)
                {


                    <div class="row" id="ReportFrame">
                        <div class="col-xs-12">
                            @Html.ReportViewer(ViewBag.TB as Microsoft.Reporting.WebForms.ReportViewer, new { frameborder = "0", width = "100%", height = "100%", style = "overflow:hidden;", scrolling = "yes" })
                        </div>
                    </div>}
            }
        </div>
    </div>
</div>




